<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <RootNamespace>SnakeExtreme</RootNamespace>
    <AssemblyName>SnakeExtreme</AssemblyName>
    <DefineConstants>$(DefineConstants);BLAZORGL</DefineConstants>
	<KniPlatform>BlazorGL</KniPlatform>
  </PropertyGroup>
  
  <PropertyGroup>
    <BlazorEnableTimeZoneSupport>false</BlazorEnableTimeZoneSupport>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="MonoGame.Extended.Animations\**" />
    <Content Remove="MonoGame.Extended.Entities\**" />
    <Content Remove="MonoGame.Extended.Graphics\**" />
    <Content Remove="MonoGame.Extended.Input\**" />
    <Content Remove="MonoGame.Extended.Tiled\**" />
    <Content Remove="MonoGame.Extended\**" />
    <EmbeddedResource Remove="MonoGame.Extended.Animations\**" />
    <EmbeddedResource Remove="MonoGame.Extended.Entities\**" />
    <EmbeddedResource Remove="MonoGame.Extended.Graphics\**" />
    <EmbeddedResource Remove="MonoGame.Extended.Input\**" />
    <EmbeddedResource Remove="MonoGame.Extended.Tiled\**" />
    <EmbeddedResource Remove="MonoGame.Extended\**" />
    <None Remove="MonoGame.Extended.Animations\**" />
    <None Remove="MonoGame.Extended.Entities\**" />
    <None Remove="MonoGame.Extended.Graphics\**" />
    <None Remove="MonoGame.Extended.Input\**" />
    <None Remove="MonoGame.Extended.Tiled\**" />
    <None Remove="MonoGame.Extended\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Pages\Index.razor.cs" />
    <Compile Include="Program.cs" />
    <Compile Include="SnakeExtremeGame.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="nkast.Xna.Framework" Version="3.11.9002" />
    <PackageReference Include="nkast.Xna.Framework.Content" Version="3.11.9002" />
    <PackageReference Include="nkast.Xna.Framework.Graphics" Version="3.11.9002" />
    <PackageReference Include="nkast.Xna.Framework.Audio" Version="3.11.9002" />
    <PackageReference Include="nkast.Xna.Framework.Media" Version="3.11.9002" />
